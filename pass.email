#!/bin/bash
if [ -z ${1} ]; then
  echo "USAGE: ./pass.email [email] [password (plain text)]"
  exit 0
elif [ $1 = "-h" ]; then
  echo "USAGE: ./pass.email [email] [password (plain text)]"
  exit 0
else
  HASH=`python -c "import crypt; print crypt.crypt($2, "$6$")"`
  /usr/bin/mysql -uroot -p***REMOVED*** -e"UPDATE mailserver.virtual_users SET password=('$HASH') WHERE email = '$1';"
  echo "Password updated."
fi
